<?xml version='1.0' encoding='utf-8'?>
<widget id="pe.insight.gameon" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GameOn</name>
    <description>
        GameOn
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        GameOn
    </author>
    <content src="login.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="android">
        <icon background="res/icon/android/ldpi.png" density="ldpi" foreground="res/icon/android/ldpi.png" />
        <icon background="res/icon/android/mdpi.png" density="mdpi" foreground="res/icon/android/mdpi.png" />
        <icon background="res/icon/android/hdpi.png" density="hdpi" foreground="res/icon/android/hdpi.png" />
        <icon background="res/icon/android/xhdpi.png" density="xhdpi" foreground="res/icon/android/xhdpi.png" />
        <icon background="res/icon/android/xhdpi.png" density="xxhdpi" foreground="res/icon/android/xhdpi.png" />
        <icon background="res/icon/android/xhdpi.png" density="xxxhdpi" foreground="res/icon/android/xhdpi.png" />
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/splash-land-xhdpi.png" density="land-xhdpi"/>

        <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="res/icon/ios/29.png" width="29" />
        <icon height="40" src="res/icon/ios/40.png" width="40" />
        <icon height="57" src="res/icon/ios/57.png" width="57" />
        <icon height="58" src="res/icon/ios/58.png" width="58" />
        <icon height="60" src="res/icon/ios/60.png" width="60" />
        <icon height="80" src="res/icon/ios/80.png" width="80" />
        <icon height="87" src="res/icon/ios/87.png" width="87" />
        <icon height="114" src="res/icon/ios/114.png" width="114" />
        <icon height="120" src="res/icon/ios/120.png" width="120" />
        <icon height="180" src="res/icon/ios/180.png" width="180" />
        <icon height="1024" src="res/icon/ios/1024.png" width="1024" />

        <splash height="1024" src="res/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="res/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="2208" src="res/screen/ios/Default-736h.png" width="1242" />
        <splash height="1334" src="res/screen/ios/Default-667h.png" width="750" />
        <splash height="1136" src="res/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="480" src="res/screen/ios/Default~iphone.png" width="320" />
        <splash height="2208" src="res/screen/ios/Default@3x~iphone~comany.png" width="1242" />
        <splash height="1242" src="res/screen/ios/Default@3x~iphone~anycom.png" width="2208" />
        <splash height="2208" src="res/screen/ios/Default@3x~iphone~anyany.png" width="2208" />
        <splash height="750" src="res/screen/ios/Default@2x~iphone~comcom.png" width="1334" />
        <splash height="1334" src="res/screen/ios/Default@2x~iphone~comany.png" width="750" />
        <splash height="1334" src="res/screen/ios/Default@2x~iphone~anyany.png" width="1334" />
        <splash height="690" src="res/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="2732" src="res/screen/ios/Default@2x~ipad~comany.png" width="1278" />
        <splash height="2732" src="res/screen/ios/Default@2x~ipad~anyany.png" width="2732" />
    </platform>

    <platform name="browser">
        <preference name="SplashScreen" value="/img/logo-gameon.png" /> <!-- defaults to "/img/logo.png" -->
        <preference name="AutoHideSplashScreen" value="true" /> <!-- defaults to "true" -->
        <preference name="SplashScreenDelay" value="3000" /> <!-- defaults to "3000" -->
        <preference name="SplashScreenBackgroundColor" value="black" /> <!-- defaults to "#464646" -->
        <preference name="ShowSplashScreen" value="false" /> <!-- defaults to "true" -->
        <preference name="SplashScreenWidth" value="274" /> <!-- defaults to "170" -->
        <preference name="SplashScreenHeight" value="92" /> <!-- defaults to "200" -->
    </platform>
    <preference name="android-minSdkVersion" value=" 19" />
    <preference name="GOOGLE_MAPS_ANDROID_API_KEY" value="AIzaSyB58JBcWqH4OcyQwZv4UQduSgeLRkDWNQg" />
    <preference name="GOOGLE_MAPS_IOS_API_KEY" value="AIzaSyB58JBcWqH4OcyQwZv4UQduSgeLRkDWNQg" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashScreenSpinnerColor" value="white" />
</widget>
